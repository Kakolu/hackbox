                    <TextView
                        android:id="@+id/t10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Small Text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
